Shelp (){

echo "Singularity Registry: 

USAGE: ./singularity.registry build [options]

Singularity: Application containers for Linux
For additional help, see http://singularityware.github.io"
}

if [ "$#" -lt 1 ]; then
    Shelp
    exit 0
fi

if [ -z "$SINGULARITY_REGISTRY_BASE" ]; then
    echo "Could not identify the Singularity Registry base."
    exit 1
fi

#####################################################################
# Admin user is allowed to specify a custom registry image
#####################################################################


if [ -z "$SINGULARITY_REGISTRY_MANAGER" ]; then
    SINGULARITY_REGISTRY_MANAGER="singularity.registry"
    export SINGULARITY_REGISTRY_MANAGER
fi


#####################################################################
# Calling user must be root
#####################################################################


if [ "$(id -u)" != "0" ]; then
    echo ""
    echo "build must be run as root (sudo)"
    echo "----------------------------------------------"
    exec ./singularity-registry build --help
    exit 1
fi

#####################################################################
# Registry controller must be on path
#####################################################################


SINGULARITY_REGISTRY_CONTROL=$(which $SINGULARITY_REGISTRY_MANAGER)
if ![ -x "$SINGULARITY_REGISTRY_CONTROL" ]; then
    echo "Could not find the singularity.registry executable $SINGULARITY_REGISTRY_MANAGER."
    exit 1
fi

while true; do
    case ${1:-} in
        -h|--help|help)
            exec ./$SINGULARITY_REGISTRY_MANAGER build --help
            exit
        ;;
        -*)
            exec sudo singularity run "$SINGULARITY_REGISTRY_MANAGER" build "$@"
            exit
        ;;
        *)
            break;
        ;;
    esac
done
